{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "es2020",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": ["@types/jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/__tests__/**/*.ts", // Include tests folder
    "**/__tests__/**/*.tsx"  // Include tests folder
  ]
}
